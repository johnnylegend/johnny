@{
    ViewData["Title"] = "智慧消火栓";
}

<body onload="assignValueToText()">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2>智慧消火栓数据</h2>
            </div>
        </div>
    </div>

    <div class="container">
        <input hidden value="hydrant" id="category" />
        <div class="form-group">
            <label class="lh46 pull-left">状态：</label>
            <a class="btn btn-default btn-lg btn-llg hydra" data-value="1">撞击</a>
            <a class="btn btn-default btn-lg btn-llg hydra" data-value="1">被拆</a>
            <a class="btn btn-default btn-lg btn-llg hydra" data-value="1">倾斜</a>
        </div>
        <form class="form-inline" style="margin-bottom: 10px;">
            <div class="form-group">
                <label class="lh46 pull-left">电压：</label>
                <input class="form-control" id="hydBat" type="text" style="height:40px;" value="3.59">V
            </div>
        </form>
        <form class="form-inline" style="margin-bottom: 10px;">
            <div class="form-group">
                <label class="lh46 pull-left">水压：</label>
                <input class="form-control" id="hydPre" type="text" style="height:40px;" value="1.5">MPa
            </div>
        </form>
        <form class="form-inline" style="margin-bottom: 10px;">
            <div class="form-group">
                <label class="lh46 pull-left">温度：</label>
                <input class="form-control" id="hydTemp" type="text" style="height:40px;" value="23.2">℃
            </div>
        </form>
        <div class="form-group form-group-inline">
            <label for="mac" class="lh46 pull-left">Mac地址：</label>
            <input class="form-control" id="mac" type="text">
        </div>
        <div class="form-group text-center">
            <button type="submit" id="submit" class="btn btn-success btn-lg btn-llg">提交</button>
            <button type="reset" class="btn btn-default btn-lg btn-llg" id="cancel">取消</button>
        </div>
    </div>
</body>
